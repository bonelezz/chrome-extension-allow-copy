{
  "manifest_version": 2,
  "name": "Allow Copy",
  "version": "0.3.0",
  "description": "Allow Copy on every websites",
  "icons": {
    "16": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["allowcopy.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "author": "FallenMax@gmail.com"
}
